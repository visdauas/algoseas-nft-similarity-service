{
  "compilerOptions": {
    "module": "node16",
    "moduleResolution": "node16",
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2022",
    "outDir": "./dist",
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "test/**/*.spec.ts"],
  "exclude": ["node_modules"]
}
